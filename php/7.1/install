#!/bin/bash

distro=$(lsb_release -is)
codename=$(lsb_release -cs)

case $distro in
Debian|Ubuntu)
    if [ "$codename" = "trusty" ] || [ "$codename" = "xenial" ] || [ "$codename" = "bionic" ] || [ "$codename" = "stretch" ] || [ "$codename" = "jessie" ]; then
        apt-get install -y language-pack-en-base
        LC_ALL=en_US.UTF-8 add-apt-repository ppa:ondrej/php -y
        apt-get update -y
        #apt-get install -y php7.1-fpm php7.1-curl php7.1-dev php7.1-gd php7.1-mbstring php7.1-zip php7.1-mysql php7.1-xml
        apt-get install -y php7.1-fpm
        apt-get autoremove -y
    else
        echo "Version of $distro not supported ($version / $codename)"
    fi
    ;;
CentOS)
    echo "TODO $distro"
    ;;
*)
    echo "Not supported distro ($distro)"
    ;;
esac